@model IEnumerable<DotNet.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>





<p>
    <li policy="AdminPolicy"><a asp-action="Create">Create New</a></li>
</p>

<form asp-controller="Books" asp-action="Index" method="get">
    <p>
        Find: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>


@{
    var statisticsCountry = Model.GroupBy(b => b.Country).Select(group =>
        new { CountryName = group.Key, CountryCount = group.Count() });
    var statisticsAuthor = Model.GroupBy(b => b.Author.FullName).Select(group =>
        new { AuthorName = group.Key, AuthorCount = group.Count() });
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfRelease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearOfRelease)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isbn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    <author-link name="@item.Author.FullName"></author-link>
                </td>
                <td>
                    <li policy="AdminPolicy">
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    </li>
                    <li><a asp-action="Details" asp-route-id="@item.ID">Details</a></li>
                    <li policy="AdminPolicy">
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </li>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Statistics</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Country
            </th>
            <th>
                Count
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in statisticsCountry)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryCount)
                </td>

            </tr>
        }
    </tbody>
</table>


<table class="table">
    <thead>
        <tr>
            <th>
                Author
            </th>
            <th>
                Count
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in statisticsAuthor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorCount)
                </td>

            </tr>
        }
    </tbody>
</table>

