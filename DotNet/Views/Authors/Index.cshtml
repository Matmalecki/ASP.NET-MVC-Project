@model IEnumerable<Project.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <li policy="UserPolicy"><a asp-action="Create">Create New</a></li>
</p>


<form asp-controller="Authors" asp-action="Index" method="get">
    <p>
        Find: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @await Html.PartialAsync("Email", item)
            </td>

            <td>
                <li policy="UserPolicy">
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                </li>
                <li><a asp-action="Details" asp-route-id="@item.ID">Details</a></li>
                <li policy="UserPolicy">
                   <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </li>
            </td>
        </tr>
        }
    </tbody>
</table>